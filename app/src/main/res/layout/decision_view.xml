<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:background="@drawable/one_sided_border"
                android:backgroundTint="@color/backgroundblue"
                android:padding="5dp"
                android:text="Reciever : "
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/taker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@drawable/one_sided_border"
                android:padding="15dp"
                android:text="David Huang"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@drawable/one_sided_border"
                android:backgroundTint="@color/backgroundblue"
                android:padding="5dp"
                android:text="Giver : "
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/giver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:background="@drawable/one_sided_border"
                android:padding="15dp"
                android:text="Sasha"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:background="@drawable/one_sided_border"
                android:backgroundTint="@color/backgroundblue"
                android:padding="5dp"
                android:text="Time : "
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:background="@drawable/one_sided_border"
                android:padding="15dp"
                android:text="21/21/2312 9:50-10:29"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:background="@drawable/one_sided_border"
                android:backgroundTint="@color/backgroundblue"
                android:padding="5dp"
                android:text="Position : "
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:background="@drawable/one_sided_border"
                android:padding="15dp"
                android:text="Service Worker"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:background="@drawable/one_sided_border"
                android:backgroundTint="@color/backgroundblue"
                android:padding="5dp"
                android:text="Manager(s) on shift : "
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/managers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="9"
                android:background="@drawable/one_sided_border"
                android:padding="15dp"
                android:text="John Doe, Carly Jane"
                android:textSize="15dp" />


        </GridLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/answer_key"
        >
         <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:columnCount="2">
             <Button
                 android:text="Confirm"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/login_button"
                 android:textColor="@color/black"
                 android:layout_columnWeight="1"
                 android:id="@+id/yes" />

             <Button
                 android:text="Deny"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/login_button"
                 android:textColor="@color/black"
                 android:layout_columnWeight="1"
                 android:id="@+id/no" />
        </GridLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>